<?xml version="1.0" encoding="utf-8"?>
<at.ac.tuwien.ims.towardsthelight.ui.PixelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="at.ac.tuwien.ims.towardsthelight.LevelResultActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"

    app:virtualHeight="114"
    app:virtualWidth="64"
    app:offsetX="11"
    app:offsetY="0"
    >

    <at.ac.tuwien.ims.towardsthelight.ui.PixelImageView
        android:layout_width="86px"
        android:layout_height="114px"

        app:imageResource="@drawable/menu_bg"
    />

    <at.ac.tuwien.ims.towardsthelight.ui.PixelImageView
        android:id="@+id/level_result_diamond_border"
        android:layout_width="64px"
        android:layout_height="114px"
        android:layout_marginLeft="11px"
        android:visibility="invisible"
        app:imageResource="@drawable/diamond_result"
    />

    <at.ac.tuwien.ims.towardsthelight.ui.PixelText
        android:id="@+id/level_result_passed"
        android:layout_width="86px"
        android:layout_height="wrap_content"
        android:layout_marginTop="9px"
        app:text="@string/passed"
    />

    <at.ac.tuwien.ims.towardsthelight.ui.PixelImageView
        android:id="@+id/level_result_bronzemedal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:layout_marginLeft="17px"
        android:visibility="invisible"
        app:imageResource="@drawable/bronze_medal_big"
    />

    <at.ac.tuwien.ims.towardsthelight.ui.PixelImageView
        android:id="@+id/level_result_silvermedal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:layout_marginLeft="36px"
        android:visibility="invisible"
        app:imageResource="@drawable/silver_medal_big"
    />

    <at.ac.tuwien.ims.towardsthelight.ui.PixelImageView
        android:id="@+id/level_result_goldmedal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:layout_marginLeft="54px"
        android:visibility="invisible"
        app:imageResource="@drawable/gold_medal_big"
    />

    <at.ac.tuwien.ims.towardsthelight.ui.PixelText
        android:id="@+id/level_result_time"
        android:layout_width="86px"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        app:fontType="hudFont"
    />

    <at.ac.tuwien.ims.towardsthelight.ui.PixelText
        android:id="@+id/level_result_highscore"
        android:layout_width="86px"
        android:layout_height="wrap_content"
        android:layout_marginTop="60px"
        app:fontType="hudFont"
    />

</at.ac.tuwien.ims.towardsthelight.ui.PixelLayout>
