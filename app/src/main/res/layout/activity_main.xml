<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.ac.tuwien.ims.towardsthelight.MainActivity">
    
    <at.ac.tuwien.ims.towardsthelight.ui.PixelImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:imageResource="@drawable/menu_logo"
    />
    <at.ac.tuwien.ims.towardsthelight.ui.PixelImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:imageResource="@drawable/menu_bg"
    />
    <at.ac.tuwien.ims.towardsthelight.ui.MenuButtonXML
        android:src="@drawable/menu_button_image_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonStartClicked"
        app:text="@string/start"
        app:x="10"
        app:y="10"
    />
</RelativeLayout>
