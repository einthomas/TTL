<resources>
    <attr name="text" format="string" />
    <attr name="x" format="float" />
    <attr name="y" format="float" />

    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="PixelImageView">
        <attr name="imageResource" format="reference" />
    </declare-styleable>

    <declare-styleable name="ImageButtonXML">
        <attr name="text" />
        <attr name="x" />
        <attr name="y" />
    </declare-styleable>

    <declare-styleable name="PixelLayout">
        <attr name="virtualWidth" format="integer" />
        <attr name="virtualHeight" format="integer" />
        <attr name="offsetX" format="integer" />
        <attr name="offsetY" format="integer" />
    </declare-styleable>

    <declare-styleable name="PixelText">
        <attr name="text" />
        <attr name="fontType" format="enum">
            <enum name="mainFont" value="0"/>
            <enum name="hudFont" value="1"/>
        </attr>
    </declare-styleable>
</resources>
